{
  "name": "yup-phone-lite",
  "version": "1.1.1",
  "description": "Adds a phone number validation check to yup validator using libphonenumber-js.",
  "license": "MIT",
  "author": "Chris Sandvik <chris.sandvik@gmail.com> (https://github.com/csandman)",
  "repository": {
    "type": "git",
    "url": "https://github.com/csandman/yup-phone-lite"
  },
  "bugs": {
    "url": "https://github.com/csandman/yup-phone-lite/issues"
  },
  "main": "dist/yup-phone-lite.cjs.js",
  "module": "dist/yup-phone-lite.esm.js",
  "browser": "dist/yup-phone-lite.umd.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "format": "npm run format:code && npm run format:package",
    "format:code": "prettier --write .",
    "format:package": "prettier-package-json --write",
    "lint": "npm run lint:code && npm run lint:types",
    "lint:code": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "prepare": "husky install",
    "postpublish": "git push --tags",
    "prepublishOnly": "npm test && npm run build",
    "test": "jest",
    "preversion": "git fetch --tags --force"
  },
  "dependencies": {
    "@types/yup": "^0.29.14",
    "libphonenumber-js": "^1.10.8"
  },
  "peerDependencies": {
    "yup": ">0.32.0"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "^0.27.0",
    "@babel/core": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/runtime": "^7.18.6",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/babel__core": "^7.1.19",
    "@types/jest": "^28.1.5",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "babel-jest": "^28.1.3",
    "core-js": "^3.23.4",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-package-json": "^2.6.4",
    "rollup": "^2.76.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-ts": "^3.0.2",
    "typescript": "^4.7.4",
    "yup": "^0.32.11"
  },
  "keywords": [
    "google",
    "google-libphonenumber",
    "libphonenumber-js",
    "number",
    "phone",
    "schema",
    "validation",
    "yup",
    "yup-phone-lite"
  ],
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "browsers": "> 0.25%, not dead",
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*": "prettier --write --ignore-unknown",
    "package.json": "prettier-package-json --write"
  },
  "readme": "README.md"
}
